{
  "build": {
    "beforeDevCommand": "npm run pyinstaller && npm run dev",
    "beforeBuildCommand": "npm run pyinstaller && npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Entrenamiento Personalizado",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "/src/model/exe/dist/training",
            "sidecar": true,
            "args": [
              "--age",
              "--height",
              "--weight",
              "--gender",
              "--gymAccess",
              "--strengthExp",
              "--cardioExp",
              "--timeAvailable",
              "--trainingGoal",
              "--trainingPreference",
              "--trainingIntensity"
            ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.ia.entrenamiento.personalizado",
      "publisher": "IA",
      "targets": "msi",
      "externalBin": [
        "src/model/exe/dist/training"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "center": true,
        "title": "Sistema de Entrenamiento Personalizado",
        "width": 800,
        "height": 600
      }
    ]
  }
}
